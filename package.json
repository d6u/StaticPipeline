{
  "name": "static-pipeline",
  "version": "0.2.0",
  "description": "Static assets processing framework and template helper",
  "main": "dist/index.js",
  "bin": {
    "static-pipeline": "./bin/static-pipeline.js"
  },
  "scripts": {
    "test": "babel-node node_modules/.bin/isparta cover --report html --report lcovonly node_modules/.bin/_mocha -- -R spec; cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:mocha": "mocha -R spec --compilers js:babel/register",
    "test:simple": "mocha --compilers js:babel/register",
    "lint": "eslint bin lib test",
    "watch:test": "testem",
    "watch:lint": "onchange '**/.eslintrc' 'bin' 'lib' 'test' -- npm run --silent lint",
    "watch:js": "babel lib -w -d dist",
    "build:reset": "rm -rfv dist && mkdir -pv dist",
    "build": "npm run build:reset && babel lib -d dist",
    "predev": "npm run build",
    "dev": "npm run watch:js & npm run watch:lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daiweilu/StaticPipeline.git"
  },
  "keywords": [
    "static",
    "assets",
    "template",
    "helper",
    "hashing",
    "compile"
  ],
  "author": "Daiwei Lu <daiweilu123@gmail.com> (http://daiwei.lu/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daiweilu/StaticPipeline/issues"
  },
  "homepage": "https://github.com/daiweilu/StaticPipeline",
  "dependencies": {
    "babel": "5.4.3",
    "bluebird": "2.9.25",
    "chalk": "1.0.0",
    "glob": "5.0.6",
    "lodash": "3.8.0"
  },
  "devDependencies": {
    "chai": "2.3.0",
    "coveralls": "^2.11.2",
    "eslint": "0.21.1",
    "isparta": "3.0.3",
    "mocha": "2.2.5",
    "mocha-lcov-reporter": "0.0.2",
    "onchange": "1.1.0",
    "sinon": "1.14.1",
    "testem": "0.8.3"
  }
}
